generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type Product {
  name      String
  price     Float
  amount    Int
}

model Order {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  customer  String
  status    String
  date      String
  cart      Product[]
  subtotal  Float
  shipping  Float?
  total     Float
}

